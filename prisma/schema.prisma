generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id            String   @id @default(uuid())
    name          String
    email         String   @unique
    password_hash String
    created_at    DateTime @default(now())

    @@map("users")
}

model Address {
    id             String  @id @default(uuid())
    title          String?
    street_address String
    city           String
    postal_code    String
    country        String

    @@map("address")
}
